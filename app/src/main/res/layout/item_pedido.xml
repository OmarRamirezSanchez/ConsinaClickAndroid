<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="100dp"
    android:id="@+id/linear"
    android:background="@android:color/white"
    android:gravity="center">

    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_detalles"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        card_view:cardCornerRadius="4dp"
        android:background="#ffebebeb"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <ImageView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:id="@+id/indicador_de_tipo"
                    android:layout_gravity="center_vertical"
                   android:background="@android:color/transparent"

                   android:src="@mipmap/delivery_icon" />

            <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="25dp"
                >

                <TextView
                  android:layout_width="match_parent"
                  android:layout_height="match_parent"
                  android:textAppearance="?android:attr/textAppearanceLarge"
                  android:text="Nombre Persona"
                  android:id="@+id/item_nombre"
                  android:textColor="@android:color/black"
                  android:gravity="left|center"
                    android:textSize="20sp"
                    android:layout_weight="1" />

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/estado_del_pedido"
                    android:src="@mipmap/aceptadas"
                    android:layout_weight="5"
                    android:layout_gravity="center_horizontal"
                    android:padding="2dp" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="15km"
                        android:id="@+id/distancia_item"
                        android:layout_weight="1.5"
                        android:gravity="left|center"
                        android:textSize="15sp"
                        android:textColor="#ff757575" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="Algo sobre el texto"
                        android:id="@+id/telefono_item"
                        android:layout_weight="1.5"
                        android:layout_marginBottom="5dp"
                        android:textSize="15sp"
                        android:gravity="left|center"
                        android:textColor="#ff757575" />

                </LinearLayout>
                <LinearLayout
                    android:layout_weight="2"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="4"
                        android:textSize="15sp"
                        android:gravity="center"
                        android:textColor="#ff757575"
                        android:text="Desde hace"/>
                    <Chronometer
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/cronometro"
                        android:layout_weight="2"
                        android:textColor="@android:color/black"
                        android:gravity="center" />
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>
        </LinearLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>