<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:weightSum="1">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Detalles del Platillo"
        android:id="@+id/textView"
        android:layout_gravity="center_horizontal"
        android:textColor="@android:color/black"
        android:gravity="center"
        android:textStyle="bold"
        android:minWidth="300dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:textSize="28sp" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Nota :"
                android:id="@+id/title_nota"
                android:textColor="@color/darck_gray"
                android:paddingLeft="10dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="muadjajajajaj"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:id="@+id/tv_nota_platillo"
                android:paddingRight="10dp"
                android:paddingLeft="10dp"
                android:textColor="@color/darck_gray" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Complementos"
                android:id="@+id/title_complementos"
                android:layout_gravity="center_horizontal"
                android:textColor="@color/darck_gray"
                android:gravity="left|center"
                android:paddingLeft="10dp" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:id="@+id/tv_lista_comidas_nombre_precio"
                android:paddingRight="10dp"
                android:paddingLeft="10dp"
                android:textColor="@color/darck_gray" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Total :   "
                android:id="@+id/total_tv_dialog"
                android:layout_weight="1"
                android:textColor="@color/darck_gray"
                android:gravity="right" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="$$$$"
                android:id="@+id/total_tv_costo"
                android:layout_weight="1"
                android:textColor="@color/darck_gray" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>